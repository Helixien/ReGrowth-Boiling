<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- ================ Boiling weather fog mote size ================ -->
	<Operation Class="ReGrowthCore.PatchOperationSliderFloat">
		<label>Boiling rain fog splashes size</label>
		<tooltip>Adjust the boiling rain fog splashes size</tooltip>
		<id>RG_BoilingRainFogSplashesSize</id>
		<xpath>Defs/WeatherDef[defName="RG_BoilingRain"]/modExtensions/li[@Class="ReGrowthCore.WeatherExtension_FogMotes"]/fogSize</xpath>
		<range>0.01~3</range>
		<defaultValue>0.5</defaultValue>
	</Operation>
	
	<!-- ================ Boiling weather fog spawn rate ================ -->
	<Operation Class="ReGrowthCore.PatchOperationSliderFloat">
		<label>Boiling rain fog spawn rate</label>
		<tooltip>Adjust the boiling rain fog splashes spawn rate</tooltip>
		<id>RG_BoilingRainFogSpawnRate</id>
		<xpath>Defs/WeatherDef[defName="RG_BoilingRain"]/modExtensions/li[@Class="ReGrowthCore.WeatherExtension_FogMotes"]/fogSpawnRate</xpath>
		<range>0.01~3</range>
		<defaultValue>0.5</defaultValue>
	</Operation>
</Patch>
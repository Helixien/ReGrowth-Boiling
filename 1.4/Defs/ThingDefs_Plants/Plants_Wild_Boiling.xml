	<!--=============== Boilberry Bush ==============-->
  <ThingDef ParentName="PlantBase">
    <defName>RG_Plant_Boilberry</defName>
    <label>boilberry bush</label>
    <description>A bushy wild plant which yields delicious yellow berries that have a warm feel to them. Berries can be cooked, but they're also good to eat even when raw.</description>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <Nutrition>0.50</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/BoilberryBush</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.55, 0.2, 0.2)</volume>
        <offset>(0,0,-0.25)</offset>
      </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <neverMultiSelect>false</neverMultiSelect>
    <fillPercent>0.20</fillPercent>
    <pathCost>30</pathCost>
    <plant>
      <fertilityMin>0.5</fertilityMin>
      <fertilitySensitivity>0.5</fertilitySensitivity>
      <growDays>6</growDays>
      <leaflessGraphicPath>Things/Plant/BerryPlant_Leafless</leaflessGraphicPath>
      <immatureGraphicPath>Things/Plant/Immature/BoilberryBush_Immature</immatureGraphicPath>
      <harvestYield>10</harvestYield>
      <harvestWork>250</harvestWork>
      <harvestTag>Standard</harvestTag>
      <harvestAfterGrowth>0.30</harvestAfterGrowth>
      <harvestedThingDef>RG_RawBoilberries</harvestedThingDef>
      <wildClusterRadius>5</wildClusterRadius>
      <wildClusterWeight>250</wildClusterWeight>
      <visualSizeRange>0.95~1.7</visualSizeRange>
      <topWindExposure>0.3</topWindExposure>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
    </plant>
  </ThingDef>
  	<!--=============== Edaku ==============-->
 	<ThingDef ParentName="PlantBase">
		<defName>RG_Edaku</defName>
		<label>edaku</label>
		<description>A yellow and delicious mushroom growing in clusters. It grows exclusively in boiling forests.</description>
		<graphicData>
			<texPath>Things/Plant/Edaku</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Nutrition>0.4</Nutrition>
			<Beauty>2</Beauty>
			<BeautyOutdoors>2</BeautyOutdoors>
		</statBases>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<pathCost>15</pathCost>
		<ingestible/>
		<plant>
			<fertilityMin>0.04</fertilityMin>
			<fertilitySensitivity>0.15</fertilitySensitivity>
			<growDays>16</growDays>
			<maxMeshCount>4</maxMeshCount>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestYield>28</harvestYield>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>RawFungus</harvestedThingDef>
			<neverBlightable>true</neverBlightable>
			<visualSizeRange>0.4~0.6</visualSizeRange>
			<topWindExposure>0.1</topWindExposure>
			<purpose>Food</purpose>
		</plant>
	</ThingDef>
